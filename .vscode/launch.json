    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extract Transcripts",
            "type": "debugpy",
            "request": "launch",
            "module": "src.cli",
            "console": "integratedTerminal",
            "args": [
                "extract-transcripts",
                "--input-folder", "./data/input_videos/opencourseware",
                "--output-file", "./data/transcripts/opencourseware_debug.json",
                "--segment-duration", "30"
            ]
        },
        {
            "name": "Download Input Videos",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/download_input_videos.py",
            "console": "integratedTerminal",
            "args": [
                "--json_file", "${workspaceFolder}/data/input_videos/example_videos.json",
                "--video_dir_name", "opencourseware"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
